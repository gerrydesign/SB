package com{	import flash.display.Sprite;	import flash.display.Graphics;	 import com.greensock.loading.*;	import com.greensock.events.LoaderEvent;	import com.greensock.loading.LoaderMax;	import com.greensock.TweenLite;	import com.greensock.plugins.TweenPlugin;	import com.greensock.plugins.TypewriterPlugin;	import com.greensock.plugins.DecoderTextPlugin;	import com.greensock.*;	import com.greensock.easing.*;	import flash.events.MouseEvent;	/**	 * ...	 * @author Gerry Yumul	 */	public class Games extends Sprite	{		public var ui:app_holder = new app_holder  ;		private var _head:String;		private var _sub:String;		private var _vidLoc:String;		private var video:VideoLoader;		private var videoHolder:Sprite = new Sprite  ;		//private var sq:Sprite;		public function Games(vidLoc:String)		{			this.addChild(videoHolder);			videoHolder.alpha = 0;			_head = "aaasd";			_sub = "sdfsdfds";			_vidLoc = vidLoc;			init();		}		private function init():void		{			trace("_vidLoc" + _vidLoc)			var loader:SWFLoader = new SWFLoader(_vidLoc,{name:"myVideo",container:videoHolder,onComplete:PlayVideo,x:20,y:20});			//video = new VideoLoader(_vidLoc, {name:"myVideo", container:videoHolder, x: 20, y:20, scaleMode:"proportionalInside",  autoPlay:false, volume:1, requireWithRoot:this.root, onComplete:PlayVideo, onProgress:progressHandler});			loader.load();		}				private function progressHandler(e:LoaderEvent):void		{			ui.sub_txt.text = e.target.progress;		}		private function PlayVideo(e:LoaderEvent):void		{			var w:Object = e.target.content;			var h:Object = e.target.content;						var sq:Sprite = createSquare(w.width + 40, h.height + 40, "0xFFFFFF")			//sq.x = stage.stageWidth/2 - sq.width/2;			//sq.y = stage.stageHeight/2 - sq.height/2;			videoHolder.addChild(sq);			videoHolder.x = stage.stageWidth / 2 - videoHolder.width / 2;			videoHolder.y = stage.stageHeight / 2 - videoHolder.height / 2;			var closeBtn:Sprite = new close_butt  ;			closeBtn.x = videoHolder.width - closeBtn.width / 2;			closeBtn.y = 0 - closeBtn.width / 2;			closeBtn.addEventListener(MouseEvent.CLICK,closeVid);			closeBtn.buttonMode = true;			videoHolder.addChild(closeBtn);			videoHolder.setChildIndex(sq,0);			//e.target.playVideo();			TweenLite.to(videoHolder,.5,{alpha:1,delay:.5});		}		private function closeVid(e:MouseEvent):void		{			this.parent.removeChild(this);			var c:Sprite = Sprite(Main.instance.getChildByName("coverDetail"));			Main.instance.removeChild(c);		}		private function createSquare(w:int,h:int,color:String):Sprite		{			var a:Sprite = new Sprite  ;			a.graphics.lineStyle(1,Number(color));			a.graphics.beginFill(Number(color),.8);			a.graphics.drawRect(0,0,w,h);			a.graphics.endFill();			return a;		}	}}